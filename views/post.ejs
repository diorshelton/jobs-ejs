<h2>Posts List</h2>
<table id="Posts-table">
  <tr id="Posts-table-header">
    <th>Title</th>
    <th>Message</th>
    <th>Visible</th>
    <th colspan="2"></th>
  </tr>
  <% if (posts && posts.length) { %>
    <% posts.forEach((post)=> { %>
      <tr>
        <td>
          <%= post.title %>
        </td>
        <td>
          <%= post.message %>
        </td>
        <td>
          <%= post.visible %>
        </td>
        <td><a href="/posts/edit/<%= post.id %>">
          <button type="button">edit</button>
        </a></td>
        <td><button type="button">delete</button></td>
      </tr>
      <% }) %>
        <% } %>
        <button>add new post</button>
</table>